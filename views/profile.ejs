<html>
    <head>
        <title>Activities</title>
        <style>
        #block_activity{
            display: block;
            background:#F45215;
            width: 300px;
        }
        </style>
    </head>
    <body>
        <h1><%=name%>'s profile</h1>
        <%for (var i=0; i<events.length; i++){%>
            <div id="block_activity">
                <h3 id="title"><%=events[i].title%></h3>
                <p id="description"><%=events[i].description%></p>
                <p id="num_persons"><%=events[i].num_persons%></p>
                <p id="location"><%=events[i].location%></p>
                <p style="visibility: hidden" id="token"><%=events[i].token%></p>
            </div>
        <%}%>
    </body>
</html>
