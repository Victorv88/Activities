<html>

<head>
  <title>Activity</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  <style>
    #selected_activity_div{
                background:lightseagreen;
                text-align: center;
            }
            #btn{
                width:200px;
                height:50px;
            }
            #comment{
              padding-top:20px;
              padding-bottom:20px;
              margin-left:20px;
              width:85%;
            }
            #comment_entered{
              margin-left:20px;
              width:34%;
            }

            #participants{
              justify-content : left;
              align-items : left;
              margin-left: 20px;
              height:100%;
            }
        </style>

</head>

<body>
  <div id="selected_activity_div">
    <h1 name="title" id="title">
      <%=title%>
    </h1>
    <h3 name="description" id="description">
      Description:
      <br>
      <%=description%>
    </h3>
    <p name="owner" id="num_persons">
      Owned by: <%=ownerName%>
    </p>
    <p name="num_persons" id="num_persons">
      Number of participants: <%=num_persons%>
    </p>
    <p name="location" id="location">
      Location: <%=location%>
    </p>
    <% if (loggedIn) {
              var tokenUpdate = '/update/' + token; %>
    <form id="button" method="POST" action="<%=tokenUpdate%>">
      <input type="submit" value="Join activity"></input>
    </form>
    <%}
            else {%>
    <form id="button" method="GET" action="/login">
      <input type="submit" value="Join activity"></input>
    </form>
    <%}%>
  </div>
  <% var addComment = '/add-comment/' + token; %>
  <form id="commentBox" class="form-inline" method="POST" action="<%=addComment%>">

    <input type="text" name="comment" class="form-control mb-2 mr-sm-2" id="comment_entered" placeholder="Enter a comment..."
      required />
    <button type="submit" class="btn btn-primary mb-2">Add comment</button>
  </form>
    <div id="commentSection">
      <%for (var i=0; i<comments.length; i++){%>
      <div class="jumbotron" id="comment">
        <p>
          <%=commentsOwners[i]%>
        </p>
        <p>
          <%=comments[i]%>
        </p>
      </div>
      <%}%>
    </div>
    <div id="participants">
        <h3> Participants list: </h3>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Username</th>
            </tr>
          </thead>
          <tbody>
            <% for (var i = 0; i < participants.length; i++) {%>
              <tr>
                <th scope="row"><%=i+1%></th>
                <td><%=participants[i]%></th>
              </tr>
            <%}%>
          </tbody>
        </table>
    </div>
</body>

</html>
